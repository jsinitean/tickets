<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
  "http://www.w3.org/TR/html4/loose.dtd">

<html lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <style type="text/css" media="screen">
      h3 { color: #f00; }
      ul { list-style: none; }
    </style>
  </head>
  <body>
    <div>
      <h3 id = "banner">Requested Tickets: <%= link_to("View Admin", 'sinitix.com/sections/list?ticket_id='+@users.ticket_id, :class => 'viewnext') %>
    </div></h3>

  <table summary="Section detail view">
    <tr>
      <th>Game</th>
      <td><%= @users.game %></td>
    </tr>
    <tr>
      <th>Date</th>
      <td><%= @users.date %></td>
    </tr>
	<tr>
      <th>Available Seats</th>
      <td><%= @users.sections %></td>
    </tr>
    <tr>
      <th>Name</th>
      <td><%= @users.name %></td>
    </tr>
    <tr>
      <th>Email</th>
      <td><%= @users.email %></td>
    </tr>
    <tr>
      <th>Message</th>
      <td><%= @users.content %></td>
    </tr>
  </table>

  </body>
</html>

