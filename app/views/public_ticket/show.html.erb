<center>
<h2><%= @team.name %></h2>

	<table class="listing" summary="Ticket list">
	    <tr class="header">
	      <th>Game</th>
		  <th>Game Time</th>
	      <th>Sections</th>
	    </tr>
	    <% @tickets.each do |ticket| %>
	    <tr class="<%= cycle('odd', 'even') %>">
	      <td><%= ticket.name %></td>
		  <td><%= ticket.game_at.strftime("%a, %b %d, %Y %I:%M%p") %></td>
	      <td>
	        <%= link_to("View", {:controller => 'public_section', :action => 'show', :ticket_id => ticket.id}) %>
	      </td>
	    </tr>
	    <% end %>
	  </table>
	
</center>