<% @page_title = "Delete Team: #{@team.name}" %>

<div id="back-button">
<%= link_to("Back", {:action => 'list'}, :class => 'back-link') %>
</div>

<div class="team delete">
<div class="menu">
  <h2>Delete Team</h2>
</div>
  
  <%= form_for(:team, :url => {:action => 'destroy', :id => @team.id}) do |f| -%>

    <p>Are you sure you want to permanently delete this team?</p>
  
    <p class="reference-name"><%= @team.name %></p>
  
    <div class="form-buttons">
      <%= submit_tag("Delete Team") %>
    </div>
    
  <% end %>
</div>
