<% @page_title = "Show Team: #{@team.name}" %>

<div id="back-button">
<%= link_to("Back", {:action => 'list'}, :class => 'back-link') %>
</div>

<div class="team show">
<div class="menu">	
  <h2>Show Team</h2>
</div>

  <table summary="Team detail view">
    <tr>
      <th>Name</th>
      <td><%= @team.name %></td>
    </tr>
    <tr>
      <th>Visible?</th>
      <td><%= @team.visible ? 'true' : 'false' %></td>
    </tr>
    <tr>
      <th>Created</th>
      <td><%= @team.created_at %></td>
    </tr>
    <tr>
      <th>Updated</th>
      <td><%= @team.updated_at %></td>
    </tr>
  </table>
  
</div>
