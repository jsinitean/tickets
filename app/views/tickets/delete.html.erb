<% @page_title = "Delete Ticket: #{@ticket.name}" %>

<div id="back-button">
<%= link_to("Back", {:action => 'list', :team_id => @team.id}, :class => 'back-link') %>
</div>

<div class="menu">
<div class="ticket delete">	
  <h2>Delete Team</h2>
</div>  

  <%= form_for(:page, :url => {:action => 'destroy', :id => @ticket.id, :team_id => @team.id}) do |f| -%>

    <p>Are you sure you want to permanently delete this page?</p>
  
    <p class="reference-name"><%= @ticket.opposing_teams.city %> <%= @ticket.opposing_teams.name %></p>
  
    <div class="form-buttons">
      <%= submit_tag("Delete Ticket") %>
    </div>
    
  <% end %>
</div>
